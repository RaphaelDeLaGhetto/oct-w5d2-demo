<section>
  <header>
    <h1><%= @user.name %></h1>
    <h3><%= @user.email %></h3>
  </header>
</section>
<article class="user">
  <p>
    <%= @user.name %> has been scrounging through your trash since <%= @user.created_at.strftime("%B %d, %Y") %>
  </p>
  <p>
    <a href="/users/<%= @user.id %>/edit">Edit</a>
  </p>
  <p>
    <form action="/users/<%=@user.id%>" method="post">
      <input type="hidden" name="_method" value="DELETE">
      <input type="submit" value="Delete User?" id="delete" onclick="return confirm('Are you sure you want to delete <%= @user.name %>?')">
    </form>
  </p>
</article>