<section>
  <h1>Post new cache</h1>
  <div class="submit-form">
    <%= erb(:errors, { locals: {object: @cache} } ) %>
    <ul class="errors">
      <% @cache.errors.full_messages.each do |msg| %>
         <li><%= msg %></li>
      <% end %>
    </ul>
    <form action="/cache" enctype="multipart/form-data" method="post">
      <div class="form-group">
        <label for="description">Description:</label>
        <input type="text" name="description" value="<%= @cache.description %>">
      </div>
      <div class="form-group">
        <label for="image">JPEG with coords:</label>
        <input type="file" name="image" accept="image/jpeg">
      </div>
      <div class="form-group">
        <button type="submit">Post</button>
      </div>
    </form>
  </div>
</section>